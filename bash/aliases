 



alias am="alsamixer"

alias extvga="xrandr --output VGA1 --auto"
alias exthdmi=:"randr -output HDMI1 --auto"

function extmon(){
	case $1 in
 		
		mirror)
			case $2 in 
				vga)
					xrandr --output VGA1 --off --output HDMI1 --off;
					xrandr --output VGA1 --auto;;
				hdmi)
					xrandr --output VGA1 --off --output HDMI1 --off;
					xrandr --output HDMI1 --auto;;
				*) 
					echo invalid command - correct usage: extmon [display style] [port];;
			esac;;
		right)
			case $2 in 
				vga) 
					xrandr --output VGA1 --off --output HDMI1 --off;
					xrandr --output VGA1 --auto --right-of LVDS1;;
				hdmi) 
					xrandr --output VGA1 --off --output HDMI1 --off;
					xrandr --output HDMI1 --auto --right-of LVDS1;;
				*) 
					echo invalid command - correct usage: extmon [display style] [port];;
			esac;;
		left)
			case $2 in 
 	 			vga) 	
					xrandr --output VGA1 --off --output HDMI1 --off;
					xrandr --output VGA1 --auto --left-of LVDS1;;
				hdmi) 	
					xrandr --output VGA1 --off --output HDMI1 --off;
					xrandr --output HDMI1 --auto --left-of LVDS1;;
				*) 
					echo invalid command - correct usage: extmon [display style] [port];;
			esac;;
		off)	xrandr --output VGA1 --off --output HDMI1 --off;;
		*) echo invalid command - correct usage: extmon [display style] [port];;
	esac
}

alias naw="sudo systemctl restart net-auto-wireless";
alias wifi="sudo wifi-menu"
 
function sch(){
	prog=$1;
	cmd=$3;
	loca=$3;
	class=$2;
	putget=$2;
	shift 3;

	case $prog in
	
		ssh )	ssh jparson2@remlnx.ews.illinois.edu;;

		scp )     
			case $putget in
				put )	scp -r $loca jparson2@remlnx.ews.illinois.edu:/home/jparson2/$@;; 	
				get )  scp -r jparson2@remlnx.ews.illinois.edu:/home/jparson2/$loca $@;;
				* )	echo "please specify put or get";;
			esac
			;;
	
		svn )	if [ "$cmd" == 'import' ]; then
				cmd="import .";
			fi;
		 	case $class in

	     			438p )  svn $cmd https://subversion.ews.illinois.edu/svn/sp13-cs438/jparson2/$@;;
	     			438t )  svn $cmd https://subversion.ews.illinois.edu/svn/sp13-cs438/_projects/linksys/$@;;
				
	     			242 )  svn $cmd https://subversion.ews.illinois.edu/svn/sp13-cs242/jparson2/$@;;
 
	    			* )   svn $cmd $class $@ ;;
		 	esac


		
	esac

}




function cd(){
	 builtin cd $@ && ls;


}


